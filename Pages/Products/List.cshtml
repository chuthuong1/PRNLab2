@page
@using WebApplication1.Bussiness.DTO
@model WebApplication1.Pages.Products.ListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var currentPage = Model.CurrentPage;
    var productsPerPage = Model.ProductsPerPage;
    var totalProducts = Model.TotalProducts;
    var totalPages = (int)Math.Ceiling((double)totalProducts / productsPerPage);
}

<link rel="stylesheet" href="~/Css/StyleSheet.css" />

<div class="container">
    <div class="left">
        <!-- Nội dung của khối trái -->
    </div>
    <div class="right">
        <div class="upper">
            <!-- Nội dung của khối trên -->
            <a asp-page="/Products/CartItem" asp-page-handler="OnGet" id="cartLink">
                <!-- Chuyển đến trang giỏ hàng -->
                <span class="cart-icon">&#128722;</span> <!-- Biểu tượng giỏ hàng -->
                <span id="cartQuantity">1</span> <!-- Hiển thị số lượng sản phẩm trong giỏ hàng -->
            </a>
        </div>
        <div class="lower">
            <!-- Nội dung của khối dưới -->
            @foreach (ProductDTO p in Model.GetProductsForPage(currentPage, productsPerPage))
            {
                <div class="item-wrap">
                    <div class="item">
                        <img class="img" src="@p.ImgUrl" />
                        <h3>@p.ProductName</h3>
                        <div class="price_sold">
                            <p class="price">@p.UnitPrice đ</p>
                            <p class="sold">đã bán @p.UnitsOnOrder</p>
                        </div>
                    </div>
                    <form method="post" asp-page-handler="AddToCart">
                        <input type="hidden" name="productId" value="@p.ProductId" />
                        <button>Add To Cart</button>
                    </form>
                </div>
            }

            <div class="pagination">
                @if (currentPage > 1)
                {
                    <a asp-page="/Products/List/{page}" asp-route-page="1">First</a>
                    <a asp-page="/Products/List" asp-route-page="@(currentPage - 1)">Previous</a>
                }
                @for (int i = 1; i <= totalPages; i++)
                {
                    if (i == currentPage)
                    {
                        <span>@i</span>
                    }
                    else
                    {
                        <a asp-page="/Products/List" asp-route-page="2">@i</a>
                    }
                }
                @if (currentPage < totalPages)
                {
                    <a asp-page="/Products/List" asp-route-page="@(currentPage + 1)">Next</a>
                    <a asp-page="/Products/List" asp-route-page="@totalPages">Last</a>
                }
            </div>
        </div>
    </div>
</div>

@if (ViewData["mess"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewData["mess"]");
        };
    </script>
}
